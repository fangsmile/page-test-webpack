{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "allowJs": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "experimentalDecorators": true,
    "noUnusedParameters": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "common/*": ["./src/common/*"],
      "asset/*": ["./src/drawing/assets/*"]
    }
  },
  "typeRoots": [
    "@types",
    "node_modules/@types"
  ],
  "exclude": [
    "node_modules"
  ]
}